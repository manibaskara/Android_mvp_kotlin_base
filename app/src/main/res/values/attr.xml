<?xml version="1.0" encoding="utf-8"?>
<resources>


    <declare-styleable name="Pinview">
        <attr name="pinBackground" format="reference"/>
        <attr name="pinLength" format="integer"/>
        <attr name="pinWidth" format="dimension"/>
        <attr name="pinHeight" format="dimension"/>
        <attr name="splitWidth" format="dimension"/>
        <attr name="cursorVisible" format="boolean"/>
        <attr name="password" format="boolean"/>
        <attr name="forceKeyboard" format="boolean"/>
        <attr name="hint" format="string"/>
        <attr name="inputType"/>
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="integer"/>
    </declare-styleable>

    <attr name="inputType" format="enum">
        <enum name="text" value="0"/>
        <enum name="number" value="1"/>
    </attr>

    <declare-styleable name="CircularImageView">
        <attr name="civ_border" format="boolean"/>
        <attr name="civ_border_width" format="dimension"/>
        <attr name="civ_border_color" format="color"/>
        <attr name="civ_circle_color" format="color"/>
        <attr name="civ_shadow" format="boolean"/>
        <attr name="civ_shadow_color" format="color"/>
        <attr name="civ_shadow_radius" format="float"/>
        <attr name="civ_shadow_gravity">
            <flag name="center" value="1"/>
            <flag name="top" value="2"/>
            <flag name="bottom" value="3"/>
            <flag name="start" value="4"/>
            <flag name="end" value="5"/>
        </attr>
    </declare-styleable>


    <declare-styleable name="Slider">
        <attr name="slider_hideIndicators" format="boolean"/>
        <attr name="slider_indicatorSize" format="dimension"/>
        <attr name="slider_selectedSlideIndicator" format="reference"/>
        <attr name="slider_unselectedSlideIndicator" format="reference"/>
        <attr name="slider_animateIndicators" format="boolean"/>
        <attr name="slider_interval" format="integer"/>
        <attr name="slider_loopSlides" format="boolean"/>
        <attr name="slider_defaultBanner" format="integer"/>
        <attr name="slider_emptyView" format="reference"/>
    </declare-styleable>

</resources>